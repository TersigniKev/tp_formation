
{{ form_start(form) }}
  <div class="container-fluid w-75">
    <div class="mb-3 row align-items-center">
      <label class="col-sm-3 col-form-label">{{ form_label(form.nom_membre) }}</label>
      <div class="col-sm-9">
        {{ form_widget(form.nom_membre, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.nom_membre) }}
      </div>
    </div>

    <div class="mb-3 row align-items-center">
      <label class="col-sm-3 col-form-label">{{ form_label(form.login_membre) }}</label>
      <div class="col-sm-9">
        {{ form_widget(form.login_membre, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.login_membre) }}
      </div>
    </div>
  </div>
  <div class="mt-3">
    <button type="submit" class="btn btn-outline-light">{{ button_label|default('Enregistrer') }}</button>
    <a href="{{ path('app_membres') }}" class="btn btn-outline-light ms-2">Retour</a>
  </div>
{{ form_end(form) }}